<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="venture.cs414.android.monopoly">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".PlayerSelect">
        </activity>
        <activity
            android:name=".GameplayScreen"
            android:label="@string/title_activity_gameplay_screen"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".SelectProperty"
            android:label="@string/title_activity_select_property"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
